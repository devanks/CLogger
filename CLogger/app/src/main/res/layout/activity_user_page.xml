<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserPage">

    <TextView
        android:id="@+id/usernewcomplaintoption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lognewcomplaint"
        android:gravity="center_horizontal"
        android:layout_marginTop="40sp"
        android:layout_marginBottom="20sp"
        android:textSize="30sp"
        android:onClick="lognewcomplaint"/>
    <TextView
        android:id="@+id/usertrackcomplaintoption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/trackcomplaint"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:onClick="trackcomplaint"/>
</LinearLayout>